  /* --- FONT IMPORT --- */
  @import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap");
  @import url("https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css");

  /* --- HIDE SCROLLBARS --- */
  * {
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none; /* Internet Explorer 10+ */
  }

  *::-webkit-scrollbar {
    display: none; /* WebKit */
  }

  /* --- CSS VARIABLES --- */
  :root {
    --font-family: "Inter", sans-serif;

    /* Light Mode Palette */
    --bg-color: #f9fafb; /* Lighter background */
    --surface-color: #ffffff;
    --text-primary: #1f2937; /* Softer black */
    --text-secondary: #6b7280; /* Softer grey */
    --border-color: #e5e7eb; /* Lighter border */
    --header-color: #111827;
    --accent-color: #4f46e5; /* Indigo */
    --accent-bg-light: #e0e7ff;
    --shadow-color: rgba(0, 0, 0, 0.05);
    --danger-color: #ef4444;
    --warning-color: #f59e0b;
    --success-color: #10b981;
    --success-bg-color: #d1fae5;
    --row-alt-color: #f9fafb;
    --row-hover-color: #f3f4f6;
    --nested-bg-color: #f8f9fc;
  }

  .dark {
    /* Dark Mode Palette */
    --bg-color: #111827;
    --surface-color: #1f2937;
    --text-primary: #d1d5db;
    --text-secondary: #9ca3af;
    --border-color: #374151;
    --header-color: #f9fafb;
    --accent-color: #818cf8;
    --accent-bg-light: rgba(129, 140, 248, 0.16);
    --shadow-color: rgba(0, 0, 0, 0.2);
    --danger-color: #f87171;
    --warning-color: #fbbf24;
    --success-color: #34d399;
    --success-bg-color: rgba(52, 211, 153, 0.15);
    --row-alt-color: #1f2937;
    --row-hover-color: #374151;
    --nested-bg-color: #1a2332;
  }

  /* --- RESET & BASE STYLES --- */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html,
  body {
    height: 100%;
    overflow: hidden;
  }

  body {
    font-family: var(--font-family);
    background-color: var(--bg-color);
    color: var(--text-primary);
    line-height: 1.6;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    display: flex;
    flex-direction: column;
    /* zoom: 0.9; */
    padding: 0;
  }

  /* --- MODERN APP LAYOUT STYLES --- */
  .container {
    display: flex;
    flex-direction: row;
    height: 100vh;
    padding: 0;
    max-width: 100%;
  }

  .sidebar {
    width: 240px;
    flex-shrink: 0;
    background-color: var(--surface-color);
    border-right: 1px solid var(--border-color);
    display: flex;
    flex-direction: column;
    padding: 1.5rem 1rem;
  }

  .sidebar-header {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--header-color);
    padding: 0 0.5rem 1.5rem 0.5rem;
    margin-bottom: 0.5rem;
  }

  .main-content-wrapper {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    padding: 1rem 2.5rem; /* Adjusted padding */
  }

  main {
    padding: 0;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    min-height: 0; /* ADD THIS LINE to fix scrolling */
  }

  /* --- CLEAN NAVIGATION STYLES --- */
  .nav-panel {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    border-bottom: none;
    margin-bottom: 0;
    height: 100%;
  }


  /* Main Navigation Buttons */
  .nav-btn {
    border: none;
    border-radius: 6px;
    padding: 0.75rem 1rem;
    gap: 0.75rem;
    background-color: transparent;
    color: var(--text-secondary);
    cursor: pointer;
    transition: all 0.15s ease;
    font-weight: 500;
    font-size: 0.9rem;
    display: flex;
    align-items: center;
    text-align: left;
    position: relative;
    width: 100%;
    margin-bottom: 0.125rem;
  }

  .nav-btn:hover:not(.active) {
    background-color: var(--row-hover-color);
    color: var(--text-primary);
  }

  .nav-btn.active {
    color: var(--accent-color);
    background-color: var(--accent-bg-light);
    font-weight: 600;
  }

  .nav-btn.active::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 3px;
    height: 20px;
    background: var(--accent-color);
    border-radius: 0 2px 2px 0;
  }

  /* Navigation Icons */
  .nav-btn i {
    width: 1.2rem;
    text-align: center;
    font-size: 0.9rem;
    transition: color 0.15s ease;
  }

  .nav-btn.active i {
    color: var(--accent-color);
  }

  /* Navigation Badges */
  .nav-badge {
    background-color: var(--border-color);
    color: var(--text-secondary);
    border-radius: 10px;
    padding: 0.2rem 0.5rem;
    font-size: 0.7rem;
    font-weight: 500;
    margin-left: auto;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 18px;
    height: 18px;
    line-height: 1;
    transition: all 0.15s ease;
  }

  .nav-btn.active .nav-badge {
    background-color: var(--accent-color);
    color: white;
  }

  /* Dropdown Navigation */
  .nav-dropdown {
    position: relative;
  }

  .nav-parent {
    justify-content: space-between;
  }

  .nav-dropdown.active .nav-parent {
    background-color: var(--accent-bg-light);
    color: var(--accent-color);
    font-weight: 600;
  }

  .nav-arrow {
    font-size: 0.75rem;
    transition: transform 0.2s ease;
    color: var(--text-secondary);
  }

  .nav-dropdown.active .nav-arrow {
    transform: rotate(180deg);
    color: var(--accent-color);
  }

  .nav-dropdown-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
    margin-top: 0.25rem;
    border-radius: 6px;
    background: var(--surface-color);
    border: 1px solid var(--border-color);
  }

  .nav-dropdown.active .nav-dropdown-content {
    max-height: 400px;
    padding: 0.5rem;
  }

  /* Child Navigation Items */
  .nav-child {
    padding: 0.75rem 1rem 0.75rem 2.5rem;
    border-radius: 6px;
    font-size: 0.85rem;
    font-weight: 500;
    position: relative;
    background: transparent;
    transition: all 0.15s ease;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    width: 100%;
    text-align: left;
    border: none;
    cursor: pointer;
    margin-bottom: 0.125rem;
  }

  .nav-child::before {
    content: '';
    position: absolute;
    left: 1.5rem;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 4px;
    background: var(--border-color);
    border-radius: 50%;
    transition: background-color 0.15s ease;
  }

  .nav-child:hover::before,
  .nav-child.active::before {
    background: var(--accent-color);
  }

  .nav-child:hover {
    background-color: var(--row-hover-color);
    color: var(--text-primary);
  }

  .nav-child.active {
    color: var(--accent-color);
    background-color: var(--accent-bg-light);
    font-weight: 600;
  }

  .nav-child .nav-badge {
    background-color: var(--border-color);
    color: var(--text-secondary);
    border-radius: 8px;
    padding: 0.2rem 0.4rem;
    font-size: 0.65rem;
    font-weight: 500;
    margin-left: auto;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 16px;
    height: 16px;
    line-height: 1;
    transition: all 0.15s ease;
  }

  .nav-child.active .nav-badge {
    background-color: var(--accent-color);
    color: white;
  }

  /* Navigation Focus States for Accessibility */
  .nav-btn:focus-visible {
    outline: 2px solid var(--accent-color);
    outline-offset: 2px;
    background-color: var(--accent-bg-light);
  }

  .nav-child:focus-visible {
    outline: 2px solid var(--accent-color);
    outline-offset: 2px;
    background-color: var(--accent-bg-light);
  }

  /* --- ACTIONS CONTAINER --- */
  .actions-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
    gap: 1rem;
  }
  .left-actions,
  .right-actions {
    display: flex;
    align-items: center;
    gap: 1rem; /* Consistent gap */
    flex-wrap: wrap;
  }
  .right-actions {
    margin-left: auto;
  }
  .filter-panel {
    display: flex;
    gap: 1rem;
    align-items: center;
  }
  .filter-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .filter-item label {
    font-size: 0.875rem;
    color: var(--text-secondary);
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 500;
  }
  #status-filter-select,
  #project-filter-select,
  #epic-filter-select {
    width: 100%;
  }
  .search-group {
    display: flex;
    gap: 1rem;
  }
  .search-wrapper {
    position: relative;
    width: 220px;
  }
  .search-wrapper:has(#ticket-number-filter) {
    width: 120px;
  }
  .search-wrapper i {
    position: absolute;
    left: 0.75rem;
    top: 50%;
    transform: translateY(-50%);
    color: var(--text-secondary);
    font-size: 0.9rem;
  }

  mark {
    background-color: #fef3c7; /* Softer yellow */
    color: #92400e;
    padding: 2px 4px;
    border-radius: 4px;
  }

  /* --- TABLE STYLES --- */
  .table-wrapper {
    overflow: auto;
    border: 1px solid var(--border-color);
    border-radius: 12px; /* Larger radius */
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    background-color: var(--surface-color);
    box-shadow: 0 4px 6px -1px var(--shadow-color),
      0 2px 4px -2px var(--shadow-color);
  }
  table {
    width: 100%;
    border-collapse: collapse;
    border-style: hidden;
    table-layout: auto;
  }
  tbody tr {
    border-bottom: 1px solid var(--border-color);
    transition: background-color 0.2s ease-in-out;
    position: relative;
  }
  tbody tr:last-child {
    border-bottom: none;
  }
  th,
  td {
    padding: 0.875rem 1.25rem; /* Adjusted padding */
    text-align: left;
    font-size: 0.875rem;
    white-space: normal;
    word-break: break-word;
    vertical-align: middle;
    position: relative;
    border: none;
  }

  /* Ensure Type, Priority, and Status columns are vertically centered */
  td[data-label="Type"],
  td[data-label="Priority"],
  td[data-label="Status"] {
    vertical-align: middle;
    text-align: left;
  }

  /* Center the tags within Type, Priority, and Status columns */
  td[data-label="Type"] .tag,
  td[data-label="Priority"] .tag,
  td[data-label="Status"] .tag {
    display: inline-block;
    vertical-align: middle;
  }

  /* Left-align the headers for Type, Priority, and Status columns */
  table:not(.project-view) thead tr th:nth-child(3),
  table:not(.project-view) thead tr th:nth-child(4),
  table:not(.project-view) thead tr th:nth-child(5) {
    text-align: left;
  }

  /* Column Widths - Updated for new order: ID, Task, Type, Priority, Status, Requested By, Assignee */
  table:not(.project-view) thead tr th:nth-child(1) {
    width: 8%; /* ID */
  }
  table:not(.project-view) thead tr th:nth-child(2) {
    width: 40%; /* Task */
  }
  table:not(.project-view) thead tr th:nth-child(3) {
    width: 8%; /* Type */
  }
  table:not(.project-view) thead tr th:nth-child(4) {
    width: 8%; /* Priority */
  }
  table:not(.project-view) thead tr th:nth-child(5) {
    width: 10%; /* Status */
  }
  table:not(.project-view) thead tr th:nth-child(6) {
    width: 12%; /* Requested By */
  }
  table:not(.project-view) thead tr th:nth-child(7) {
    width: 12%; /* Assignee */
  }
  table:not(.project-view) thead tr th:nth-child(8) {
    width: 2%; /* Actions */
  }

  .bulk-edit-active thead tr th.checkbox-cell,
  .bulk-edit-active tbody tr td.checkbox-cell {
    width: 45px !important;
  }
  .bulk-edit-active table:not(.project-view) thead tr th:nth-child(2) {
    width: 6%; /* ID */
  }
  .bulk-edit-active table:not(.project-view) thead tr th:nth-child(3) {
    width: 35%; /* Task */
  }
  .bulk-edit-active table:not(.project-view) thead tr th:nth-child(4) {
    width: 6%; /* Type */
  }
  .bulk-edit-active table:not(.project-view) thead tr th:nth-child(5) {
    width: 6%; /* Priority */
  }
  .bulk-edit-active table:not(.project-view) thead tr th:nth-child(6) {
    width: 8%; /* Status */
  }
  .bulk-edit-active table:not(.project-view) thead tr th:nth-child(7) {
    width: 10%; /* Requested By */
  }
  .bulk-edit-active table:not(.project-view) thead tr th:nth-child(8) {
    width: 10%; /* Assignee */
  }
  .bulk-edit-active table:not(.project-view) thead tr th:nth-child(9) {
    width: 2%; /* Actions */
  }

  /* Left-align the headers for Type, Priority, and Status columns in bulk edit mode */
  .bulk-edit-active table:not(.project-view) thead tr th:nth-child(4),
  .bulk-edit-active table:not(.project-view) thead tr th:nth-child(5),
  .bulk-edit-active table:not(.project-view) thead tr th:nth-child(6) {
    text-align: left;
  }

  th {
    font-weight: 500;
    color: var(--text-secondary);
    font-size: 0.75rem; /* Smaller header */
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-bottom: 1px solid var(--border-color);
    position: sticky;
    top: 0;
    background-color: var(--surface-color);
    z-index: 10;
  }
  /* Remove alternating row color for a cleaner look */
  /* tbody tr:nth-child(even) { background-color: var(--row-alt-color); } */

  tbody tr:hover {
    background-color: var(--row-hover-color);
    cursor: pointer;
  }
  tbody tr:hover .task-content strong {
    color: var(--accent-color);
  }
  .updating {
    opacity: 0.5;
    cursor: progress !important;
  }
  .is-successful {
    animation: success-flash 1.5s ease-out;
  }
  @keyframes success-flash {
    0%,
    100% {
      background-color: transparent;
    }
    25%,
    75% {
      background-color: var(--success-bg-color);
    }
  }

  /* --- INTERACTIVE & EDITABLE ELEMENTS --- */
  .editable-field-wrapper {
    position: relative;
  }
  select,
  input,
  textarea {
    width: 100%;
    padding: 0.5rem 0.75rem;
    border: 1px solid var(--border-color);
    border-radius: 6px;
    background-color: var(--surface-color);
    color: var(--text-primary);
    font-family: var(--font-family);
    font-size: 0.875rem;
    transition: all 0.2s ease;
    box-shadow: 0 1px 2px 0 var(--shadow-color);
  }
  #task-search-input,
  #ticket-number-filter {
    padding-left: 2.25rem;
  }
  .dark select,
  .dark input,
  .dark textarea {
    background-color: var(--bg-color);
  }
  input[type="checkbox"] {
    width: 1rem;
    height: 1rem;
    border-radius: 4px;
    border: 1px solid var(--border-color);
    box-shadow: none;
  }
  select:hover,
  input:hover,
  textarea:hover {
    border-color: #d1d5db; /* Slightly darker border on hover */
  }
  select:focus,
  input:focus,
  textarea:focus {
    outline: none;
    border-color: var(--accent-color);
    box-shadow: 0 0 0 3px var(--accent-bg-light);
  }
  select.placeholder-selected {
    color: var(--text-secondary);
  }
  .clear-icon {
    position: absolute;
    right: 20px;
    top: 50%;
    transform: translateY(-50%);
    color: var(--text-secondary);
    cursor: pointer;
    display: none;
    font-size: 0.9rem;
  }
  .editable-field-wrapper:has(input[type="date"]) .clear-icon {
    right: 2rem;
  }
  .editable-field-wrapper.has-value:hover .clear-icon {
    display: block;
  }
  .clear-icon:hover {
    color: var(--danger-color);
  }
  .input-error {
    border-color: var(--danger-color) !important;
  }

  /* Searchable Dropdown */
  .searchable-dropdown {
    position: relative;
  }
  .searchable-dropdown-input {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .searchable-dropdown-list {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    min-width: 0; /* Remove minimum width constraint */
    background-color: var(--surface-color);
    border: 1px solid var(--border-color);
    border-radius: 6px; /* Slightly less rounded to match tags */
    max-height: 200px;
    overflow-y: auto;
    z-index: 1000;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06);
    margin-top: 2px;
    padding: 2px;
    /* Hide scrollbar but keep scrolling functionality */
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none; /* Internet Explorer 10+ */
  }
  
  .searchable-dropdown-list::-webkit-scrollbar {
    display: none; /* WebKit browsers (Chrome, Safari, Edge) */
  }
  .searchable-dropdown-list div {
    padding: 0.375rem 0.5rem; /* Reduced vertical padding to match tag height */
    cursor: pointer;
    border-radius: 4px;
    margin: 1px;
    font-size: 0.75rem; /* Match tag font size */
    line-height: 1.2; /* Tighter line height */
  }
  .searchable-dropdown-list div:hover {
    background-color: var(--row-hover-color);
  }

  /* --- ICONS & IN-TABLE ELEMENTS --- */
  .task-icons {
    display: flex;
    gap: 16px;
    align-items: center;
    justify-content: flex-end;
  }
  .history-icon,
  .attachment-icon,
  .copy-icon {
    color: var(--text-secondary);
    cursor: pointer;
    font-size: 1rem;
    transition: color 0.2s, opacity 0.2s;
    opacity: 0.5;
  }
  tbody tr:hover .history-icon,
  tbody tr:hover .attachment-icon,
  tbody tr:hover .copy-icon {
    opacity: 1;
  }
  .history-icon:hover,
  .attachment-icon:hover,
  .copy-icon:hover {
    color: var(--accent-color);
  }
  .id-container {
    display: flex;
    align-items: center;
    gap: 8px;
  }
  .id-container span {
    font-size: 0.8rem;
    font-weight: 500;
  }
  .id-container .copy-icon {
    opacity: 0;
    font-size: 0.8rem;
  }
  tbody tr:hover .id-container .copy-icon {
    opacity: 1;
  }
  .id-and-age {
    display: flex;
    flex-direction: column;
    line-height: 1.2;
  }
  .ticket-age {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.75rem;
    color: var(--text-secondary);
  }
  .ticket-age i {
    font-size: 0.7rem;
  }
  .ticket-age.overdue {
    color: var(--danger-color);
    font-weight: 600;
  }
  .warning-icon {
    color: var(--warning-color);
    font-size: 0.875rem;
  }

  /* --- TASK DISPLAY (INLINE) --- */
  .task-display {
    display: flex;
    align-items: center;
    gap: 10px;
  }
  .task-content {
    flex-grow: 1;
  }
  .task-content strong {
    font-weight: 500;
  }

  .tag-editor .editable-field-wrapper {
    display: none;
  }
  .status-tag,
  .type-tag,
  .priority-tag {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.35rem;
    padding: 0.25rem 0.5rem; /* Reduced padding */
    border-radius: 4px; /* Slight curve, more square-like */
    font-size: 0.75rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    text-transform: capitalize;
    white-space: nowrap;
    border: 1px solid; /* Add border for all tags */
    width: 100%; /* Fit column width */
    text-align: center;
    height: 100%; /* Ensure full height */
    min-height: 28px; /* Minimum height for proper vertical centering */
  }
  .tag-editor .editable-field-wrapper {
    display: none;
  }
  .tag-editor.is-editing .status-tag {
    display: none;
  }
  .tag-editor.is-editing .editable-field-wrapper {
    display: block;
  }

  /* Tag Colors - Updated to match pill design */
  .status-open,
  .status-planning {
    background-color: #f8fafc;
    color: #475569;
    border-color: #cbd5e1;
  }
  .status-in-progress {
    background-color: #fef3c7;
    color: #d97706;
    border-color: #fbbf24;
  }
  .status-on-hold {
    background-color: #fecaca;
    color: #dc2626;
    border-color: #f87171;
  }
  .status-blocked {
    background-color: #e5e7eb;
    color: #374151;
    border-color: #9ca3af;
  }
  .status-rejected,
  .status-cancelled {
    background-color: #fee2e2;
    color: #dc2626;
    border-color: #fca5a5;
  }
  .status-completed,
  .status-approved,
  .status-closed {
    background-color: #dcfce7;
    color: #16a34a;
    border-color: #86efac;
  }
  .status-default {
    background-color: #f8fafc;
    color: #475569;
    border-color: #cbd5e1;
  }

  .type-task {
    background-color: #e0e7ff;
    color: #3730a3;
    border-color: #c7d2fe;
  }
  .type-bug {
    background-color: #fecaca;
    color: #dc2626;
    border-color: #fca5a5;
  }
  .type-request,
  .type-questions {
    background-color: #dbeafe;
    color: #1d4ed8;
    border-color: #93c5fd;
  }
  .type-default {
    background-color: #f8fafc;
    color: #475569;
    border-color: #cbd5e1;
  }

  .priority-urgent {
    background-color: #1f2937;
    color: #f9fafb;
    border-color: #374151;
  }
  .priority-high {
    background-color: #fecaca;
    color: #dc2626;
    border-color: #fca5a5;
  }
  .priority-medium {
    background-color: #fef3c7;
    color: #d97706;
    border-color: #fbbf24;
  }
  .priority-low {
    background-color: #f0f9ff;
    color: #0369a1;
    border-color: #bae6fd;
  }
  .priority-default {
    background-color: #f8fafc;
    color: #475569;
    border-color: #cbd5e1;
  }

  /* --- MULTI-SELECT DROPDOWN --- */
  .multi-select-container {
    position: relative;
    width: 100%;
  }
  .multi-select-pills {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    padding: 0.5rem;
    border: 1px solid transparent;
    border-radius: 6px;
    cursor: pointer;
    min-height: 40px;
    transition: border-color 0.2s, background-color 0.2s;
  }
  .multi-select-container:hover .multi-select-pills {
    background-color: var(--bg-color);
    border-color: var(--border-color);
  }
  .multi-select-container.is-open .multi-select-pills {
    border-color: var(--accent-color);
  }
  .multi-select-placeholder {
    color: var(--text-secondary);
    line-height: 1.5;
  }
  .multi-select-pill {
    display: inline-flex;
    align-items: center;
    background-color: var(--row-alt-color);
    color: var(--text-primary);
    padding: 4px 8px;
    border-radius: 6px;
    font-size: 0.8rem;
    border: 1px solid var(--border-color);
  }
  .multi-select-pill .remove-pill {
    margin-left: 6px;
    cursor: pointer;
    font-size: 0.9rem;
    padding: 2px;
    border-radius: 50%;
    transition: color 0.2s;
    color: var(--text-secondary);
  }
  .multi-select-pill .remove-pill:hover {
    color: var(--danger-color);
  }
  .multi-select-dropdown {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    background-color: var(--surface-color);
    border: 1px solid var(--border-color);
    border-radius: 6px;
    max-height: 200px;
    overflow-y: auto;
    z-index: 1001;
    margin-top: 4px;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1),
      0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }
  .multi-select-container.is-open .multi-select-dropdown {
    display: block;
  }
  .multi-select-option {
    display: block;
    padding: 0.5rem 0.75rem;
    cursor: pointer;
  }
  .multi-select-option:hover {
    background-color: var(--row-alt-color);
  }
  .multi-select-option input {
    margin-right: 0.5rem;
  }

  /* --- GENERIC MODAL STYLES --- */
  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(17, 24, 39, 0.6); /* Darker overlay */
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 2000;
    backdrop-filter: blur(4px);
  }

  .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid var(--border-color);
    /* CHANGE: Add padding for spacing */
    padding: 1.5rem 2rem;
    /* REMOVE: These are no longer needed */
    /* padding-bottom: 1rem; */
    /* margin-bottom: 1rem; */
  }
  .modal-header h2 {
    color: var(--header-color);
  }
  .close-button {
    background: none;
    border: none;
    font-size: 1.75rem;
    cursor: pointer;
    color: var(--text-secondary);
  }
  .modal-body {
    max-height: 100vh;
    overflow-y: auto;
  }
  .modal-footer {
    border-top: 1px solid var(--border-color);
    display: flex;
    justify-content: flex-end;
    gap: 0.75rem;
    /* CHANGE: Add padding for spacing */
    padding: 1rem 2rem;
    /* REMOVE: These are no longer needed */
    /* margin-top: 1.5rem; */
    /* padding-top: 1rem; */
  }

  /* History & Attachment Modals */
  .history-entry {
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--border-color);
  }
  .history-entry:last-child {
    border-bottom: none;
  }
  .history-meta {
    font-size: 0.8rem;
    color: var(--text-secondary);
    margin-bottom: 0.25rem;
  }
  .history-change {
    font-size: 0.9rem;
  }
  .attachment-link {
    display: block;
    padding: 0.75rem;
    border-bottom: 1px solid var(--border-color);
    text-decoration: none;
    color: var(--accent-color);
    word-break: break-all;
    border-radius: 6px;
    transition: background-color 0.2s;
  }
  .attachment-link:last-child {
    border-bottom: none;
  }
  .attachment-link:hover {
    background-color: var(--bg-color);
  }

  /* Detail Grid (used in Add Project and Bulk Update) */
  .detail-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }
  .detail-field {
    display: flex;
    flex-direction: column;
  }
  .detail-field label {
    margin-bottom: 0.5rem;
    font-weight: 500;
    color: var(--text-secondary);
    font-size: 0.8rem;
  }
  .detail-field.has-warning label {
    color: var(--warning-color);
  }
  .detail-field.has-warning input,
  .detail-field.has-warning select,
  .detail-field.has-warning .searchable-dropdown-input {
    border-color: var(--warning-color) !important;
  }

  /* Add Task Modal */
  .add-task-project-section {
    padding: 1rem;
    background-color: var(--row-alt-color);
    border-radius: 8px;
  }
  .add-task-project-section label,
  .new-ticket-row-body label {
    font-size: 0.875rem;
    color: var(--text-secondary);
    font-weight: 500;
    margin-bottom: 0.25rem;
    display: block;
  }
  .add-task-project-section > label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin: 0;
  }
  .new-ticket-row {
    border: 1px solid var(--border-color);
    border-radius: 8px;
    padding: 1rem;
    margin-bottom: 1rem;
    position: relative;
    background-color: var(--surface-color);
  }
  .new-ticket-row:last-child {
    margin-bottom: 0;
  }
  .new-ticket-row-header,
  .new-ticket-row-body {
    display: grid;
    gap: 1rem;
  }
  .new-ticket-row-header {
    grid-template-columns: 1fr 1fr;
    margin-bottom: 1rem;
  }
  .new-ticket-row-body {
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
  }
  .new-ticket-row-header input,
  .new-ticket-row-header textarea,
  .new-ticket-row-body select {
    background-color: var(--row-alt-color);
    border-color: var(--row-alt-color);
  }

  /* Find the .new-ticket-row rule and CHANGE it to this */
  .new-ticket-row {
    border: 1px solid var(--border-color);
    border-radius: 8px;
    padding: 1rem;
    margin-bottom: 1rem;
    background-color: var(--surface-color);
    /* ADD these new properties */
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
  }

  /* Find and REPLACE this rule */
  .new-ticket-actions {
    display: flex;
    align-items: center; /* Vertically centers the button */
    height: 36px; /* Matches the height of the Title/Description inputs for perfect alignment */
  }

  /* Find and REPLACE this rule */
  .remove-ticket-row-btn {
    background: none;
    border: none;
    color: var(--danger-color); /* Ensures the icon is red */
    cursor: pointer;
    font-size: 1.1rem; /* Makes the icon slightly larger */
    padding: 0.5rem;
    border-radius: 6px;
    transition: all 0.2s ease;
    opacity: 0.65; /* Makes the icon a bit more visible by default */
    line-height: 1;
  }

  /* Find and REPLACE this rule */
  .remove-ticket-row-btn:hover {
    opacity: 1; /* Makes the icon fully visible on hover */
    background-color: var(
      --row-alt-color
    ); /* Adds a subtle background highlight */
  }
  .new-ticket-content {
    flex-grow: 1;
  }

  /* --- MODERN TICKET DETAIL MODAL --- */
  #task-detail-modal .modal-content {
    padding: 0;
    display: flex;
    flex-direction: row;
    max-height: 90vh;
    overflow-y: auto; /* Allow the whole modal to scroll if it gets too big */
    width: 90vw;
    max-width: 1400px;
    border-radius: 12px;
    border: 1px solid var(--border-color);
    box-shadow: 0 4px 12px var(--shadow-color);
    overflow-y: auto;
  }

  .modal-close-btn {
    position: absolute;
    top: 1rem;
    right: 1.5rem;
    z-index: 10;
  }

  #task-detail-modal .modal-body {
    display: flex;
    width: 100%;
    padding: 0;
    overflow: hidden;
  }

  /* --- Left Column: Main Content --- */
  .ticket-main-content {
    flex: 2;
    padding: 2rem 2.5rem;
    display: flex;
    flex-direction: column;
    overflow-y: auto;
    border-right: 1px solid var(--border-color);
    background-color: var(--surface-color);
  }

  .ticket-main-header {
    margin-bottom: 1.5rem;
  }

  .modal-actions {
    display: flex;
    gap: 0.5rem;
    justify-content: flex-end;
    margin-top: 1rem;
  }

  .ticket-id-tag {
    font-size: 0.8rem;
    font-weight: 500;
    padding: 0.25rem 0.6rem;
    background-color: var(--row-alt-color);
    border: 1px solid var(--border-color);
    border-radius: 6px;
    color: var(--text-secondary);
    margin-bottom: 1rem;
    display: inline-block;
  }

  .modal-title-textarea {
    font-size: 1.75rem;
    font-weight: 600;
    color: var(--header-color);
    line-height: 1.3;
    border: none;
    background: transparent;
    padding: 0.5rem;
    margin: -0.5rem;
    border-radius: 8px;
    resize: none;
    width: 100%; /* Make it full width */
  }
  .modal-title-textarea:hover {
    background-color: var(--row-alt-color);
  }
  .modal-title-textarea:focus {
    background-color: var(--surface-color);
    border: 1px solid var(--accent-color);
    box-shadow: none;
  }

  .modal-section-label {
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--text-secondary);
    margin: 2rem 0 0.5rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--border-color);
  }

  .modal-description-textarea {
    font-size: 1rem;
    line-height: 1.7;
    color: var(--text-primary);
    border: 1px solid transparent;
    padding: 0.5rem;
    margin: 0rem;
    border-radius: 8px;
    resize: auto;
    overflow-y: auto; /* <-- This is important */
    min-height: 200px; /* <-- Set a reasonable starting height */
    background: transparent;
    width: 100%;
  }

  .modal-description-textarea:hover {
    background-color: var(--row-alt-color);
    border-color: var(--border-color);
  }
  .modal-description-textarea:focus {
    background-color: var(--surface-color);
    border-color: var(--accent-color);
    box-shadow: none;
  }

  .ticket-attachments-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .attachment-card {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    border: 1px solid var(--border-color);
    border-radius: 8px;
    background-color: var(--surface-color);
  }
  .attachment-card:hover {
    background-color: var(--row-alt-color);
  }

  .attachment-card .file-icon {
    font-size: 1.5rem;
    color: var(--accent-color);
  }

  .attachment-card .file-info {
    flex-grow: 1;
  }

  .attachment-card .file-info strong {
    display: block;
    font-size: 0.875rem;
    color: var(--text-primary);
  }
  .attachment-card .file-info span {
    font-size: 0.8rem;
    color: var(--text-secondary);
  }
  .attachment-card .attachment-action-btn {
    color: var(--text-secondary);
    font-size: 1.2rem;
    cursor: pointer;
    text-decoration: none;
  }
  .attachment-card .attachment-action-btn:hover {
    color: var(--accent-color);
  }

  /* --- Subtask Styles --- */
  .ticket-subtasks-container {
    margin-top: 1.5rem;
  }
  .subtask-list {
    list-style: none;
    margin: 0.5rem 0;
    padding: 0;
  }
  .subtask-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.5rem 0;
    border-bottom: 1px solid var(--border-color);
  }
  .subtask-item:last-child {
    border-bottom: none;
  }
  .subtask-item input[type="checkbox"] {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
  }
  .subtask-item span {
    flex-grow: 1;
    font-size: 0.9rem;
  }
  .subtask-item.completed span {
    text-decoration: line-through;
    color: var(--text-secondary);
  }
  .subtask-item .copy-icon {
    margin-left: auto;
  }
  .remove-subtask-btn {
    background: none;
    border: none;
    color: var(--text-secondary);
    cursor: pointer;
    font-size: 1rem;
    opacity: 0;
    transition: opacity 0.2s;
  }
  .subtask-item:hover .remove-subtask-btn,
  .subtask-item:hover .copy-icon {
    opacity: 1;
  }
  .remove-subtask-btn:hover {
    color: var(--danger-color);
  }
  .add-subtask-area {
    display: flex;
    gap: 0.5rem;
    margin-top: 1rem;
  }
  .add-subtask-area input {
    flex-grow: 1;
  }

  /* --- Comment Styles --- */
  .ticket-comments-container {
    margin-top: 1.5rem;
  }
  .comment-list {
    margin-top: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  .comment-item {
    display: flex;
    gap: 1rem;
  }
  .comment-avatar {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background-color: var(--border-color);
    color: var(--text-secondary);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    flex-shrink: 0;
  }
  .comment-body {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }
  .comment-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.25rem;
  }
  .comment-author {
    font-weight: 600;
    color: var(--text-primary);
  }
  .comment-timestamp {
    font-size: 0.8rem;
    color: var(--text-secondary);
  }
  .comment-text {
    line-height: 1.5;
    color: var(--text-primary);
  }
  .comment-input-area {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-top: 1.5rem;
  }
  .comment-input-area textarea {
    resize: vertical;
    min-height: 60px;
  }
  .comment-input-area button {
    align-self: flex-end;
  }

  /* --- Right Column: Details Sidebar --- */
  .ticket-details-sidebar {
    flex: 1;
    min-width: 320px;
    max-width: 380px;
    background-color: var(--bg-color);
    padding: 2rem;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
  }

  .sidebar-section {
    margin-bottom: 2rem;
  }

  .sidebar-section:last-of-type {
    margin-bottom: 0;
  }

  .sidebar-section h4 {
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--text-secondary);
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .sidebar-property-static,
  .sidebar-property-editable {
    padding: 0.8rem 0;
    font-size: 0.875rem;
    border-bottom: 1px solid var(--border-color);
  }

  .sidebar-property-static {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .sidebar-section .sidebar-property-static:last-of-type,
  .sidebar-section .sidebar-property-editable:last-of-type {
    border-bottom: none;
  }

  .prop-label {
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
    display: block;
  }
  .prop-value {
    font-weight: 500;
    color: var(--text-primary);
  }

  .sidebar-property-editable .tag-editor,
  .sidebar-property-editable .editable-field-wrapper,
  .sidebar-property-editable select,
  .sidebar-property-editable .searchable-dropdown-input,
  .sidebar-property-editable .inline-editor[type="text"],
  .sidebar-property-editable .inline-editor[type="date"] {
    width: 100%;
    padding: 0.5rem;
  }
  .sidebar-property-editable .tag-editor {
    border: none;
    padding: 0;
    background-color: transparent;
  }
  .sidebar-property-editable .status-tag,
  .sidebar-property-editable .type-tag {
    justify-content: center;
  }

  /* --- LOADER, TOAST, PAGINATION --- */
  .loader-container,
  .error-container {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: stretch;
    padding: 0;
    color: var(--text-secondary);
    background: var(--bg-primary);
    min-height: 100vh;
  }

  .loading-content {
    padding: 2rem;
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
  }

  .loading-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--border-color);
  }

  .loading-logo {
    width: 40px;
    height: 40px;
    border-radius: 8px;
    overflow: hidden;
  }

  .loading-text {
    flex: 1;
  }

  .loading-filters {
    display: flex;
    gap: 2rem;
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: var(--bg-secondary);
    border-radius: 12px;
    border: 1px solid var(--border-color);
    flex-wrap: wrap;
  }

  .loading-filter-item {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .loading-table {
    background: var(--bg-primary);
    border-radius: 12px;
    border: 1px solid var(--border-color);
    overflow: hidden;
  }

  .loading-table-header {
    display: grid;
    grid-template-columns: 60px 1fr 100px 100px 100px 120px 120px;
    gap: 1rem;
    padding: 1rem 1.5rem;
    background: var(--bg-secondary);
    border-bottom: 1px solid var(--border-color);
  }

  .loading-table-rows {
    padding: 0.5rem 0;
  }

  .loading-table-row {
    display: grid;
    grid-template-columns: 60px 1fr 100px 100px 100px 120px 120px;
    gap: 1rem;
    padding: 1rem 1.5rem;
    border-bottom: 1px solid var(--border-color);
  }

  .loading-table-row:last-child {
    border-bottom: none;
  }

  .loading-shimmer {
    background: linear-gradient(90deg, 
      var(--border-color) 25%, 
      rgba(255, 255, 255, 0.1) 50%, 
      var(--border-color) 75%
    );
    background-size: 200% 100%;
    animation: shimmer 2s infinite;
    border-radius: 4px;
  }

  @keyframes shimmer {
    0% {
      background-position: -200% 0;
    }
    100% {
      background-position: 200% 0;
    }
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem !important;
    border: none !important;
  }

  .empty-state-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    max-width: 400px;
    margin: 0 auto;
  }

  .empty-state-icon {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: var(--bg-secondary);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-secondary);
    font-size: 2rem;
    border: 2px solid var(--border-color);
  }

  .empty-state-content h3 {
    margin: 0;
    color: var(--text-primary);
    font-size: 1.25rem;
    font-weight: 600;
  }

  .empty-state-content p {
    margin: 0;
    color: var(--text-secondary);
    font-size: 0.9rem;
    line-height: 1.5;
  }

  .spinner {
    width: 50px;
    height: 50px;
    border: 5px solid var(--border-color);
    border-top: 5px solid var(--accent-color);
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin-bottom: 1rem;
  }
  @keyframes spin {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }
  .error-container p {
    color: var(--danger-color);
    font-weight: 500;
  }
  .toast {
    visibility: hidden;
    min-width: 250px;
    background-color: #333;
    color: #fff;
    text-align: center;
    border-radius: 8px;
    padding: 16px;
    position: fixed;
    z-index: 3000;
    left: 50%;
    transform: translateX(-50%);
    bottom: 30px;
    font-size: 1rem;
    opacity: 0;
    transition: visibility 0s 0.5s, opacity 0.5s, bottom 0.5s;
  }
  .toast.show {
    visibility: visible;
    opacity: 1;
    bottom: 50px;
    transition: visibility 0s, opacity 0.5s, bottom 0.5s;
  }
  .toast.success {
    background-color: var(--success-color);
  }
  .toast.error {
    background-color: var(--danger-color);
  }
  .pagination-controls {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 1.5rem 0;
    gap: 0.75rem;
    flex-shrink: 0;
  }
